<?php

ini_set("log_errors" , "1");
ini_set("error_log" , "err.txt");
ini_set("display_errors" , "0");

// Start session
if(!session_id()){
    session_start();
}

class Cart {
    protected $cart_contents = array();

    public function __construct(){
        // sessiondan alışveriş sepetinin dizisini alıyorum
        $this->cart_contents = !empty($_SESSION['cart_contents'])?$_SESSION['cart_contents']:NULL;
        if ($this->cart_contents === NULL){
            // temel değişken atamaları yapılıyor.
            $this->cart_contents = array('cart_total' => 0, 'total_items' => 0);
        }
    }

    /**
     * Sepet dizisinin tamamını döndürür
     */

    public function contents(){

        $cart = array_reverse($this->cart_contents);

        unset($cart['total_items']);
        unset($cart['cart_total']);

        return $cart;
    }

    /**
     * Sepet detayını döndürür
     */

    public function get_item($row_id){
        return (in_array($row_id, array('total_items', 'cart_total'), TRUE) OR ! isset($this->cart_contents[$row_id]))
            ? FALSE
            : $this->cart_contents[$row_id];
    }

    /**
     * Toplam öğe sayısını döndürür
     */

    public function total_items(){
        return $this->cart_contents['total_items'];
    }

    /**
     * Toplam fiyatı döndürür
     */

    public function total(){
        return $this->cart_contents['cart_total'];
    }

    /**
     * Ürünleri sepete kaydeder
     */

    public function insert($item = array()){
        if(!is_array($item) OR count($item) === 0){
            return FALSE;
        }else{
            if(!isset($item['id'], $item['name'], $item['price'], $item['qty'])){
                return FALSE;
            }else{
                /*
                 * Ekleme
                 */
                // miktarı ekler
                $item['qty'] = (float) $item['qty'];
                if($item['qty'] == 0){
                    return FALSE;
                }
                // fiyatı ekler
                $item['price'] = (float) $item['price'];
                // sepete eklenmekte olan ürün için benzersiz bir id oluşturur
                $rowid = md5($item['id']);
                // Zaten ekli ise miktar ı alıp üstüne ekler
                $old_qty = isset($this->cart_contents[$rowid]['qty']) ? (int) $this->cart_contents[$rowid]['qty'] : 0;
                // güncellenmiş miktarla yeniden oluşturur
                $item['rowid'] = $rowid;
                $item['qty'] += $old_qty;
                $this->cart_contents[$rowid] = $item;

                // Ürünü sepete kaydeder
                if($this->save_cart()){
                    return isset($rowid) ? $rowid : TRUE;
                }else{
                    return FALSE;
                }
            }
        }
    }

    /**
     * Sepeti güncelle
     */

    public function update($item = array()){
        if (!is_array($item) OR count($item) === 0){
            return FALSE;
        }else{
            if (!isset($item['rowid'], $this->cart_contents[$item['rowid']])){
                return FALSE;
            }else{
               
                if(isset($item['qty'])){
                    $item['qty'] = (float) $item['qty'];
                    // eğer miktar sıfırsa, ürünü sepetten kaldır
                    if ($item['qty'] == 0){
                        unset($this->cart_contents[$item['rowid']]);
                        return TRUE;
                    }
                }

                // güncellenebilir id bulur
                $keys = array_intersect(array_keys($this->cart_contents[$item['rowid']]), array_keys($item));

                if(isset($item['price'])){
                    $item['price'] = (float) $item['price'];
                }
                // ürün id ve adı değişmemeli
                foreach(array_diff($keys, array('id', 'name')) as $key){
                    $this->cart_contents[$item['rowid']][$key] = $item[$key];
                }
                // Ürünü sepete kaydeder
                $this->save_cart();
                return TRUE;
            }
        }
    }

    /**
     * Alışveriş sepetini session a kaydeder
     */

    protected function save_cart(){
        $this->cart_contents['total_items'] = $this->cart_contents['cart_total'] = 0;
        foreach ($this->cart_contents as $key => $val){
            // dizinin uygunluğunu kontrol eder
            if(!is_array($val) OR !isset($val['price'], $val['qty'])){
                continue;
            }

            $this->cart_contents['cart_total'] += ($val['price'] * $val['qty']);
            $this->cart_contents['total_items'] += $val['qty'];
            $this->cart_contents[$key]['subtotal'] = ($this->cart_contents[$key]['price'] * $this->cart_contents[$key]['qty']);
        }

        // sepet boşsa, oturumdan siler
        if(count($this->cart_contents) <= 2){
            unset($_SESSION['cart_contents']);
            return FALSE;
        }else{
            $_SESSION['cart_contents'] = $this->cart_contents;
            return TRUE;
        }
    }

    /**
     * Öğeyi septten silme
     */

    public function remove($row_id){
        // unset, kaydeder 
        unset($this->cart_contents[$row_id]);
        $this->save_cart();
        return TRUE;
    }

    /**
     * Sepeti boşaltır ve session ı siler
     */

    public function destroy(){
        $this->cart_contents = array('cart_total' => 0, 'total_items' => 0);
        unset($_SESSION['cart_contents']);
    }
}

?>
